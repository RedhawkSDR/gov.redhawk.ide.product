<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.redhawk.ide.product</groupId>
  <artifactId>gov.redhawk.ide.product.parent</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>gov.redhawk.development.configuration</groupId>
    <artifactId>parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <properties>
    <tycho-extras-version>${tycho-version}</tycho-extras-version>
    <tycho.scmUrl>scm:git:https://github.com/RedhawkSDR/eclipse-products-gov.redhawk.ide.product.git</tycho.scmUrl>
    <nxm>http://nextmidas.techma.com/p2/nxm/updates/3.6/latest/</nxm>
    <nxm-rcp>http://nextmidas.techma.com/p2/nxm.ui/updates/latest/</nxm-rcp>
    <mil.jpeojtrs.sca>http://download.redhawksdr.org/mil.jpeojtrs.sca/releases/3.0</mil.jpeojtrs.sca>
    <gov.redhawk.core>http://download.redhawksdr.org/gov.redhawk.core/releases/3.0</gov.redhawk.core>
    <gov.redhawk.ide>http://download.redhawksdr.org/gov.redhawk.ide/releases/3.0</gov.redhawk.ide>
    <gov.redhawk.codegen>http://download.redhawksdr.org/gov.redhawk.codegen/releases/3.0</gov.redhawk.codegen>
    <jacorb>http://download.redhawksdr.org/jacorb/updates/stable</jacorb>
    <pydev>https://dl.bintray.com/fabioz/pydev/6.4.3/</pydev>
    <nebula>http://download.eclipse.org/nebula/releases/2.0.0/</nebula>
    <idl-editor>http://download.redhawksdr.org/idl-editor</idl-editor>
    <eclipse>http://download.eclipse.org/releases/photon/</eclipse>
    <reload4j>http://download.redhawksdr.org/reload4j/1.2.19</reload4j>
  </properties>

  <repositories>
    <repository>
      <id>reload4j</id>
      <layout>p2</layout>
      <url>${reload4j}</url>
    </repository>

    <repository>
      <id>eclipse</id>
      <layout>p2</layout>
      <url>${eclipse}</url>
    </repository>

    <repository>
      <id>nxm</id>
      <layout>p2</layout>
      <url>${nxm}</url>
    </repository>

    <repository>
      <id>nxm-rcp</id>
      <layout>p2</layout>
      <url>${nxm-rcp}</url>
    </repository>

    <repository>
      <id>mil.jpeojtrs.sca</id>
      <layout>p2</layout>
      <url>${mil.jpeojtrs.sca}</url>
    </repository>

    <repository>
      <id>gov.redhawk.core</id>
      <layout>p2</layout>
      <url>${gov.redhawk.core}</url>
    </repository>

    <repository>
      <id>gov.redhawk.ide</id>
      <layout>p2</layout>
      <url>${gov.redhawk.ide}</url>
    </repository>

    <repository>
      <id>gov.redhawk.codegen</id>
      <layout>p2</layout>
      <url>${gov.redhawk.codegen}</url>
    </repository>

    <repository>
      <id>org.omg.jacorb</id>
      <layout>p2</layout>
      <url>${jacorb}</url>
    </repository>

    <repository>
      <id>pydev</id>
      <layout>p2</layout>
      <url>${pydev}</url>
    </repository>

    <repository>
      <id>nebula</id>
      <layout>p2</layout>
      <url>${nebula}</url>
    </repository>

    <repository>
      <id>idl-editor</id>
      <layout>p2</layout>
      <url>${idl-editor}</url>
    </repository>
  </repositories>


  <modules>
    <module>features/gov.redhawk.sdk</module>
    <module>features/gov.redhawk.e4.platform.feature</module>
    <module>features/gov.redhawk.tailoredTools</module>
    <module>plugins/gov.redhawk.e4.platform</module>
    <module>plugins/gov.redhawk.editor.product</module>
    <module>plugins/gov.redhawk.plotter.application</module>
    <module>releng/product</module>
    <module>releng/p2</module>
  </modules>

  <profiles>
    <profile>
      <id>ui-tests</id>
      <modules>
        <module>tests/gov.redhawk.editor.product.tests</module>
        <module>tests/gov.redhawk.plotter.application.tests</module>
      </modules>
      <properties>
        <swt-bot>http://download.eclipse.org/technology/swtbot/releases/latest/</swt-bot>
      </properties>
      <repositories>
        <repository>
          <id>swt-bot</id>
          <layout>p2</layout>
          <url>${swt-bot}</url>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86</arch>
            </environment>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86_64</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
